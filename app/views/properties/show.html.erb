<h1>閲覧</h1>
<p>物件名: <%= @property.name %></p>
<p>賃料: <%= @property.price.to_s(:delimited) %>円</p>
<p>住所: <%= @property.address %>円</p>
<p>築年数: <%= @property.age %>年</p>
<p>備考: <%= @property.option %></p>
<hr>
<% number = 1 %>
<% @property.stations.each do |station| %>
<h3>最寄り駅<%= number %></h3>
<%= link_to '削除', property_station_path(@property.id,station.id), method: :delete %>
<p>路線名: <%= station.route_name %></p>
<p>駅名: <%= station.station_name %></p>
<p>徒歩分数: <%= station.span %>分</p>
<br>
<% number += 1 %>
<% end %>

<%= link_to '編集', edit_property_path %> | <%= link_to '戻る', properties_path %>